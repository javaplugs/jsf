            <converter-id>jsfplugs.Instant</converter-id>
        </converter>
        <attribute>
            <name>pattern</name>
            <description>Date format pattern for DateTimeFormatter</description>
        </attribute>
        <attribute>
            <name>format</name>
            <description>Pre defined DateTimeFormatter name (attribute name)</description>
        </attribute>
        <attribute>
            <name>zoneId</name>
            <description>ZoneId to be used with DateTimeFormatter</description>
        </attribute>
    </tag>
